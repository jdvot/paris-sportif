# Automatically switch to correct GitHub account for this repo
# Requires: direnv (brew install direnv)

# Check current gh account
CURRENT_GH_USER=$(gh api user --jq .login 2>/dev/null || echo "none")
REPO_OWNER="jdvot"

if [ "$CURRENT_GH_USER" != "$REPO_OWNER" ]; then
  echo "üîÑ Switching GitHub account to $REPO_OWNER..."
  gh auth switch --user "$REPO_OWNER" 2>/dev/null || echo "‚ö†Ô∏è  Run: gh auth login"
fi

# Also set default model to Opus in Claude Code context
export CLAUDE_DEFAULT_MODEL="opus"
