# =============================================================================
# Paris Sportif - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# =============================================================================

# =============================================================================
# BACKEND (Python/FastAPI)
# =============================================================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/paris_sportif
REDIS_URL=redis://localhost:6379

# External APIs
FOOTBALL_DATA_API_KEY=your_football_data_api_key
GROQ_API_KEY=your_groq_api_key

# Authentication (Supabase)
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_minimum_32_characters

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND (Next.js)
# =============================================================================

# API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# MCP (Claude Code Integration)
# =============================================================================

# Linear
LINEAR_API_KEY=lin_api_your_key

# Notion
NOTION_API_KEY=secret_your_key

# =============================================================================
# DOCKER (optional)
# =============================================================================

POSTGRES_USER=paris_sportif
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=paris_sportif
