# ============================================
# Paris Sportif - Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
#
# All NEXT_PUBLIC_* variables are exposed to the browser.
# Non-prefixed variables are server-side only (build time or SSR).
#
# Variables marked [REQUIRED] must be set for the app to function.
# Variables marked [OPTIONAL] have sensible defaults or enable optional features.
# ============================================


# ============================================
# Backend API [REQUIRED]
# ============================================
# Backend API URL - used for SSR requests and Next.js rewrites
# Local development: http://localhost:8000
# Production (Render): https://paris-sportif-api.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:8000


# ============================================
# Supabase Authentication [REQUIRED]
# ============================================
# Supabase project URL (Dashboard > Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous (public) key (Dashboard > Settings > API > anon/public)
# This key is safe to expose in the browser - it respects Row Level Security
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here


# ============================================
# Site URL [OPTIONAL]
# ============================================
# Public URL of the frontend (used for SEO metadata, sitemap, robots.txt)
# Defaults to https://paris-sportif.vercel.app
NEXT_PUBLIC_SITE_URL=http://localhost:3000


# ============================================
# Sentry Error Monitoring [OPTIONAL]
# ============================================
# Sentry DSN for frontend error tracking (https://sentry.io/)
# Used in sentry.client.config.ts, sentry.server.config.ts, sentry.edge.config.ts
NEXT_PUBLIC_SENTRY_DSN=

# Sentry organization and project slugs (used for source map uploads at build time)
# These are server-side only, not exposed to the browser
SENTRY_ORG=
SENTRY_PROJECT=


# ============================================
# Google Analytics [OPTIONAL]
# ============================================
# Google Analytics 4 Measurement ID (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=


# ============================================
# Trustpilot Widget [OPTIONAL]
# ============================================
# Trustpilot Business Unit ID (found in Trustpilot Business dashboard)
# Enables the TrustBox trust badge widget on the landing page
NEXT_PUBLIC_TRUSTPILOT_BUSINESS_ID=


# ============================================
# Development / Debug [OPTIONAL]
# ============================================
# Enable debug logging in the browser console
NEXT_PUBLIC_DEBUG=false

# Enable mock data mode (develop without running the backend)
# NEXT_PUBLIC_USE_MOCK_DATA=false


# ============================================
# Vercel (auto-set by Vercel, do not set manually)
# ============================================
# VERCEL=1                              # Set automatically on Vercel deployments
# NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=    # Git commit SHA for Sentry release tracking
